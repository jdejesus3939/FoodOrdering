<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0E68C" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="1,2,3" >

        <TextView
            android:id="@+id/subwayOrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp" />

        <!-- Select Sandwich -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select sandwich"
            android:textColor="#000000" />

        <TableRow>

            <CheckBox
                android:id="@+id/check6inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 inch"
                android:checked="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPrice6inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/check12inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 inch"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPrice12inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <!-- Select Bread -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select bread"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioBread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio9GrainWheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9-Grain Wheat"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radio9GrainHoneyOat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9-Grain Honey Oat"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioItalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Italian"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioHerbCheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Italian Herb &amp; Cheese"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioFlatbread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flatbread"
                android:textColor="#000000" />
        </RadioGroup>

        <!-- Select Flavor -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Flavor"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioFlavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioBLT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLT"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioBlackForestHam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Forest Ham"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioColdCutCombo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cold Cut Combo"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioItalianBMT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itatian BMT"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioSpicyItalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy Italian"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioSubwayMelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subway Melt"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioTuna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuna"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioTurkeyBreast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turkey Breast"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioVeggieDelite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veggie Delite"
                android:textColor="#000000" />
        </RadioGroup>

        <!-- Select Cheese -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select cheese"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioCheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioAmerican"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="American"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioPepperJack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepperjack"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioProvolone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provolone"
                android:textColor="#000000" />
        </RadioGroup>

        <!-- Select Veggies -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select veggies"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkLettuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shredded Lettuce"
            android:checked="true"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkTomatoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomatoes"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkBellPepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bell Pepper"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkRedOnion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Onion"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkCucumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cucumber"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkSpinach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spinach"
            android:textColor="#000000" />

        <!-- Select Sauce -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select sauce"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioSauce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioRanch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranch"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioMayonnaise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mayonnaise"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioChipotleSouthWest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chipotle Southwest"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioHoneyMustard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honey Mustard"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioSweetOnion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet Onion"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioRedWineVinegar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Wine Vinegar"
                android:textColor="#000000" />
        </RadioGroup>

        <!-- Select Meal -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Meal"
            android:textColor="#000000" />

        <TableRow>

            <CheckBox
                android:id="@+id/checkYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes (with chips and drink)"
                android:checked="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPriceYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <!-- Continue Button -->

        <Button
            android:id="@+id/btnSubwayProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="40dip"
            android:layout_marginTop="40dip"
            android:text="Click here to place an order..."
            android:textColor="#000000" />
    </TableLayout>

</ScrollView>